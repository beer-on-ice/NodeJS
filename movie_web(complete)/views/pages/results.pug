extends ../layout

block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 #{keyword}
                .panel-body
                    if category&& category.length > 0
                        each item in category
                            .col-md-2
                                .thumbnail
                                    a(href="/movie/"+item._id)
                                        img(src=item.poster,alt=item.title)
                                    .caption
                                        h3 #{item.title}
                                        p:  a.btn.btn-primary(href="/movie/"+item._id,role="button") 观看预告片
            ul.pagination
                - for(var i =0;i<totalPages;i++) 
                    - if(currentPage == (i+1))
                        li.active
                            span #{currentPage}
                    - else 
                        - var url = '/results?'+ query +'&p='+ (i+1)
                        li
                            a(href=url) #{i+1}
                    
