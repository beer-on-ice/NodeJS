extends ../layout

block content
    .container
        .row
            .col-md-7
                embed(src=movie.flash,allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
            .col-md-5
                dl.dl-horizontal
                    dt 电影名称
                    dd= movie.title
                    dt 导演
                    dd= movie.director
                    dt 国家
                    dd= movie.country
                    dt 语种
                    dd= movie.language
                    dt 海报地址
                    dd= movie.poster
                    dt 片源地址
                    dd= movie.flash
                    dt 上映时间
                    dd= movie.year
                    dt 简介
                    dd= movie.summary
